<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.jonas_kraus.learn_app.activity.StatisticsActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:text="Drawers"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/blue_3" />

            <LinearLayout
                android:id="@+id/linearLayoutChart"
                android:layout_width="fill_parent"
                android:layout_height="270dp"
                android:background="@color/white"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewDrawerBar_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_shape"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/imageViewDrawerBar_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_shape"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/imageViewDrawerBar_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_shape"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/imageViewDrawerBar_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_shape"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/imageViewDrawerBar_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_shape"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/imageViewDrawerBar_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_shape"
                    android:padding="10dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewDrawerChart_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="0" />

                <TextView
                    android:id="@+id/textViewDrawerChart_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="0" />

                <TextView
                    android:id="@+id/textViewDrawerChart_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="0" />

                <TextView
                    android:id="@+id/textViewDrawerChart_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="0" />

                <TextView
                    android:id="@+id/textViewDrawerChart_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="0" />

                <TextView
                    android:id="@+id/textViewDrawerChart_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="0" />


            </LinearLayout>
            <TextView
                android:id="@+id/textViewCountCategories"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:text="Categories"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/blue_3" />

            <TextView
                android:id="@+id/textViewCountCards"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:text="Cards"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/blue_3" />

            <TextView
                android:id="@+id/textViewCountPlayedCards"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:text="Viewed Cards:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/blue_3" />
            <TextView
                android:id="@+id/textViewStatsCountKnown"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:text="Known:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/blue_3" />
            <TextView
                android:id="@+id/textViewStatsCountNotKnown"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:text="Not Known:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/blue_3" />
            <TextView
                android:id="@+id/textViewStatsCountOverallTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:text="Overall time:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/blue_3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutGraph"
                android:orientation="vertical">

                </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_marginTop="15dp"
                    android:id="@+id/buttonBackHome"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/flat_selector_blue"
                    android:onClick="onClick"
                    android:text="back"
                    android:textColor="@color/white" />
                <Button
                    android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/buttonGraph"
                    android:enabled="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/flat_selector_blue"
                android:onClick="onClick"
                android:text="graphs"
                android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
