<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Card"
        android:id="@+id/buttonPromptMenuCategoryAddCard"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/buttonPromptMenuCategoryDelete"
        android:layout_toStartOf="@+id/buttonPromptMenuCategoryDelete" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Category"
        android:id="@+id/buttonPromptMenuCategoryAddCat"
        android:layout_below="@+id/buttonPromptMenuCategoryAddCard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/buttonPromptMenuCategoryEdit"
        android:layout_below="@+id/buttonPromptMenuCategoryAddCard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/buttonPromptMenuCategoryDelete"
        android:layout_alignTop="@+id/buttonPromptMenuCategoryEdit"
        android:layout_toRightOf="@+id/buttonPromptMenuCategoryEdit"
        android:layout_toEndOf="@+id/buttonPromptMenuCategoryEdit" />
</LinearLayout>